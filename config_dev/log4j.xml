    <category name="org.hibernate.hql" additivity="false">
        <priority value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="dailyFile"/>
    </category>

    <category name="org.hibernate.sql" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="dailyFile"/>
    </category>

    <category name="org.hibernate.SQL" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="dailyFile"/>
    </category>

    <category name="org.hibernate.hql.ast.QueryTranslatorImpl" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="dailyFile"/>
    </category>

    <category name="com.fyqz.dc.common.PerformanceInterceptor" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="performanceFile"/>
    </category>

    <category name="com.opensymphony.xwork2.interceptor.TimerInterceptor" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="performanceFile"/>
    </category>

    <!--//todo need to remove-->
    <category name="p6spy" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="performanceFile"/>
    </category>


    <category name="com.fyqz.dc.intrercepter.FyqzLoggingInterceptor" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="performanceFile"/>
    </category>

    <root>
        <priority value="info"/>
        <appender-ref ref="console" />
        <appender-ref ref="dailyFile"/>
    </root>

</log4j:configuration>