<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>The dc project</display-name>
    <session-config>
        <!-- Default to 30 minute session timeouts -->
        <session-timeout>50</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:hib-config.xml</param-value>
    </context-param>
    <!--Ｄon't need the following configuration if we use slf4j rather than log4j, change by shihaiyang-->
<!--  	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.xml</param-value>
	</context-param>
		-->
	
    <!--The following used to check the login -->
   <context-param>
        <param-name>loginCheckPatterns</param-name>
        <param-value>*</param-value>
    </context-param>
    <context-param>
        <param-name>loginIgnorePatterns</param-name>
        <param-value>err_show*,forward_toLogin*,user_ajaxLogin</param-value>
    </context-param>
    <!--The following used to check the login  end -->


    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!--Ｄon't need the following configuration if we use slf4j rather than log4j, change by shihaiyang-->
    <!--   <listener>
    	<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class> 
	</listener>-->

    <listener>
        <listener-class>com.fyqz.dc.common.CommonSessionListener</listener-class>
    </listener>

    <filter>
        <filter-name>hibernateFilter</filter-name>
        <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
        <init-param>
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>sessionFactory</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>hibernateFilter</filter-name>
        <url-pattern>/*</url-pattern>

    </filter-mapping>
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>com.fyqz.dc.common.FyqzStrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>


</web-app>
